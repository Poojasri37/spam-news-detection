pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Poojasri37/spam-news-detection.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Script') {
            steps {
                sh 'python your_main_script.py' // Replace with your actual Python script
            }
        }

        stage('Test (optional)') {
            steps {
                sh 'pytest tests/' // if you have tests
            }
        }
post {
    success {
        emailext(
            to: 'your-email@gmail.com',
            subject: "Build Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            body: "Good job!\n\nCheck build log at ${env.BUILD_URL}",
            attachLog: true
        )
    }
    failure {
        emailext(
            to: 'your-email@gmail.com',
            subject: "Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            body: "Something went wrong.\n\nCheck log at ${env.BUILD_URL}",
            attachLog: true
        )
    }
}

    }
}
