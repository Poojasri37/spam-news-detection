pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Poojasri37/spam-news-detection.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Script') {
            steps {
                sh 'python your_main_script.py' // Replace with your actual Python script
            }
        }

        stage('Test (optional)') {
            steps {
                sh 'pytest tests/' // if you have tests
            }
        }
    }
}
